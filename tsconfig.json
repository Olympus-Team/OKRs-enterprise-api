{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "allowJs": true,
    "paths": {
      "@helpers/*": ["./src/services/helpers/*"]
    }
  },
  "include": ["test/**/*", "scripts", "src/**/*"],
  "exclude": ["node_modules", "dist"],
  "typeAcquisition": {
    "include": ["jest"]
  }
}
