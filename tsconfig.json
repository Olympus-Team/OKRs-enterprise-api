{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowJs": true,
    "paths": {
      "@helpers/*": ["./src/services/helpers/*"]
    }
  },
  "include": ["test", "scripts", "src", "typeorm"],
  "exclude": ["node_modules", "dist"]
}
