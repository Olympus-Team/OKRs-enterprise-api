{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "allowJs": true,
    "paths": {
      "@db/*": ["./src/db/*"],
      "@libs/*": ["./src/services/libs/*"],
      "@constants/*": ["./src/constants/*"]
    }
  },
  "include": [
    "test/**/*",
    "scripts",
    "src/**/*",
    ".eslintrc.js",
    "ormconfig.js",
    "lint-staged.config.js",
    "jest.config.js"
  ],
  "exclude": ["node_modules", "dist"],
  "typeAcquisition": {
    "include": ["jest"]
  }
}
